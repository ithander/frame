<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ithang.system.data.mapper.DataMapper">

    <!--  判断是否己安装 -->
    <select id="isInstall" resultType="Integer">
        select count(0) from sys_info
    </select>
    
    <!--  判断数据库是否存在 -->
    <select id="isDatabaseExist" resultType="String">
        show databases like 'ithang'
    </select>
    
    <select id="lastInfo" resultType="SysInfo">
        select * from sys_info limit 0,1
    </select>
    
    

</mapper>